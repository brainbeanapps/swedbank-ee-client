# http://EditorConfig.org
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 120
quote_type = auto
charset = utf-8

[{*.js,*.jsx,*.ts,*.tsx}]
indent_size = 4
continuation_indent_size = 4
quote_type = single

[{*.json,*.yml,*.yaml,.babelrc}]
indent_style = space
indent_size = 2
quote_type = double
