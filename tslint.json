{
  "extends": "tslint:recommended",
  "rules": {
    "indent": [true, 4],
    "linebreak-style": [true, "LF"],
    "align": [true, "arguments", "parameters", "statements"],
    "arrow-return-shorthand": [true, "multiline"],
    "comment-format": [true, {"ignore-words": ["TODO", "HACK", "NOTE"]}],
    "no-namespace": false,
    "max-classes-per-file": [false],
    "max-line-length": [false],
    "interface-name": [true, "never-prefix"],
    "quotemark": [true, "single", "jsx-single", "avoid-escape"],
    "variable-name": [true, "check-format", "allow-leading-underscore", "ban-keywords"],
    "whitespace": [true, "check-branch", "check-decl", "check-operator", "check-module", "check-separator", "check-type", "check-preblock"],
    "ordered-imports": [true, {"import-sources-order": "case-insensitive", "named-imports-order": "lowercase-first"}],
    "member-ordering": [true, {
      "order": [
        "static-field",
        "instance-field",
        "constructor",
        "instance-method",
        "static-method"
      ]
    }]
  }
}
