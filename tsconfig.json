{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDirs": [
      "bin",
      "lib",
      "test"
    ],
    "outDir": "dist.es6",
    "noImplicitAny": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "allowJs": true,
    "lib": [
      "es6",
      "dom"
    ]
  },
  "files": [
    "typings/index.d.ts"
  ],
  "include": [
    "bin/**/*.ts",
    "lib/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "external_packages"
  ]
}
